body,html, #main
    height 100%


body, html
    width 100%

body
    background-color #f4f4f2
    font-family 'Source Sans Pro', sans-serif
    font-weight 300
    font-size 18px
    line-height 200%
    letter-spacing 1px
    color darkGray
    word-spacing 3px
    margin 0

    h2
        color lightCoral
        font-weight 300

    ul
        -webkit-padding-start 0

    li 
        list-style-type none

    a
        color darkGray

    a:hover
        color medCoral

    p 
        line-height 150%

#main 
    margin-left 80px

section
    //padding 200px 300px
    width 550px
    margin 0 auto
    display table



section:not(#ourwork)
    height 100vh
    display table

    div 
        display table-cell
        vertical-align middle

section#header
    img
        width 100px

    #header-container
        width 440px
        text-align center
        margin 0 auto

    h1
        text-align center
        color medGray
        font-weight 300
    
    .mobile 
        display none

section#ourwork
    padding-bottom 100px
    padding-top 20vh

    a
        text-transform uppercase
        padding 8px 20px 
        font-size 14px
        font-weight 700
        color lightCoral
        border 2px solid lightCoral
        transition border-radius 0.3s
        text-decoration none

    h3
        font-size 15px
        font-weight 700
        margin-bottom 0
        color medGray

    div
        margin 100px 0
        text-align center
        width 100%
    
    img
        max-width 95%
    
    a.visit
        text-align center

    p.desc
        font-size 14px
        margin-top 0
        margin-bottom 22px

    a:hover
        border-radius 18px

section#coverage
    a
        display block

#nav
    background-color darkCoral
    position fixed
    left 0
    top 0
    height 100%
    width 80px
    padding 30px 0
    margin-right 10px

    img
        width 40px
        padding 0 0 0 15px
        vertical-align middle

    a.active
        border-left 6px solid medCoral
        padding 15px 0

        img
            margin-left -6px
            

    img:nth-of-type(5)
        margin-bottom 0

    li
        height 73px 
        a
            padding 25px 0
            height 30px


        
#contact
    a 
        text-decoration underline



@media (max-width: 700px) 
    li
        margin-bottom: 10px;
    #whatwedo
        line-height 150%
        
    section
        width 100%
        padding 0 
        
    #main
        padding 0 35px
    
    #coverage a
        line-height 150%
        margin-bottom 10px
    #header h1 
        font-size 1.2em
    
@media (max-width: 500px) 
    body section 
        padding 100px 0
        height 100%
    section#intro
        padding-top 45%
    #main
        margin-left 0
    #nav
        width 100%
        height 80px
        padding 0
        margin 0
        margin-bottom 50px
        text-align center

        img
            width 40px
            padding 0
            vertical-align middle

        a.active
            border-top 6px solid medCoral
            padding 18px 10px
            margin-top 0 
            border-left none

            img
                margin-top 0
                margin-left 0

        img:nth-of-type(5)
            margin-right 0

        li
            height 73px 
            text-align center
            display inline
            a
                padding 18px 10px
                height 30px
                margin-top 0

@media (max-width: 425px) 
    h1#intro.mobile
        display block
    h1#intro.desktop
        display none
        
       
